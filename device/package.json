{
  "type": "module",
  "name": "device",
  "version": "0.0.0",
  "private": true,
  "description": "Device microservice",
  "main": "dist/src/index.js",
  "scripts": {
    "serve": "NODE_ENV=production node .",
    "dev": "npm run build && NODE_ENV=develop node .",
    "build": "tsc && tsc-alias",
    "watch": "tsc -w & tsc-alias -w & nodemon .",
    "test": "vitest --exclude \"test/tolerance/**\" --run",
    "test:tolerance:notification": "vitest --run tolerance.notification",
    "coverage": "vitest --run --coverage",
    "lint:fix": "eslint src/ --ext .js,.cjs,.mjs,.ts,.cts --fix",
    "lint": "eslint src/ --ext .js,.cjs,.mjs,.ts,.cts",
    "format:fix": "prettier --write src",
    "format": "prettier --check src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mala1180/revue.git"
  },
  "keywords": [],
  "author": "Mattia Matteini, Alberto Paganelli",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mala1180/revue/issues"
  },
  "homepage": "https://github.com/Mala1180/revue#readme",
  "dependencies": {
    "axios": "^1.6.7",
    "common": "file:../common",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.15.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "eslint": "^8.49.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.4",
    "tsc-alias": "^1.8.8",
    "typescript": "5.5.3",
    "vite": "^4.4.11",
    "vitest": "^2.0.0"
  }
}
