  },
  "homepage": "https://github.com/Mala1180/revue#readme",
  "dependencies": {
    "mongoose": "^8.0.1",
    "nodemailer": "^6.9.13",
    "vitest": "^1.3.1"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "dependency-cruiser": "^15.5.0",
